extends ../layouts/common.pug
block content
		h1 
			span.mr-3 User List 
			a.btn.btn-primary(href="/users/create") Create User
		.d-flex.align-items-center
			

			form.ml-auto(action="/users/search", method="get" class= "d-flex")
					input(type="text" name="q" value= value class="form-control ")
					button(class="btn btn-outline-success my-2 my-sm-0") Search
		table.table
			tr
				th Avatar
				th Name
				th Phone
				th Actions
			each user in users
				tr
					td
						img(src=user.avatar, width=64)
					td=user.name
					td=user.phone
					td
						a.btn.btn-info(href='/users/' + user.id) View
		