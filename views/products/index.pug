extends ../layouts/common.pug
block content
	.container-fluid
	h1 
		span.mr-3 Products
		.d-flex.align-items-center
			form.ml-auto(action="/products/search", method="GET", class="d-flex")
				input(type="text", name="q", class="form-control")
				button(class="btn btn-primary ml-2") Search

	.row.d-inline-flex
		each product in products
			.col-6.col-sm-4.col-md-3.p-2
				.card.mb-3.text-center
					img.card-img-top(src= product.image)
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
							p.badge.badge-pill.badge-dark= product.price
								span &nbsp; VND
						a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart 

	nav(aria-label='Page navigation example')
		ul.pagination
			li.page-item
			a.page-link(href='?page='+(page < 1?(page - 1): 1)) Previous
			while temp++ < totalPage
				li.page-item
				a.page-link(href='?page='+ temp)= temp
			li.page-item
			a.page-link(href='?page='+ (page < totalPage? (page + 1): page)) Next